<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quên mật khẩu</title>
    <link rel="stylesheet" href="/css/user/home.css">
    <link rel="stylesheet" href="/css/user/login.css">
</head>
<body>
    <header class="header">
        <img src="/images/user/logo.png" alt="Dọn Nhà Vui" class="logo">
        <nav class="nav">
            <a href="/services">DỊCH VỤ</a>
            <a href="#">GIÁ CẢ</a>
            <a href="#">LIÊN HỆ</a>
        </nav>
    </header>
    <main>
        <section class="login-section">
            <form id="forgotPasswordForm" class="login-form-box">
                <h2>Quên mật khẩu</h2>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input name="email" id="email" type="email" required>
                </div>
                <button type="submit">Gửi OTP</button>
                <div id="msg" class="form-msg"></div>
            </form>
        </section>
    </main>
    <script>
        document.getElementById('forgotPasswordForm').onsubmit = async function(e) {
            e.preventDefault();
            const form = e.target;
            const data = { email: form.email.value };
            const res = await fetch('/api/forgot-password', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            const msg = await res.json();
            document.getElementById('msg').innerText = msg.message || msg.error;
        }
    </script>
</body>
</html>