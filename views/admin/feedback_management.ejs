</head>
<body>
  <div class="sidebar">
        <h2>Admin Panel</h2>
        <ul>
            <li><a href="/admin/dashboard">ğŸ“Š Dashboard</a></li>
            <li><a href="/admin/orders?page=1&pageSize=10">ğŸ“… Quáº£n lÃ½ Ä‘Æ¡n hÃ ng</a></li>
            <li><a href="/admin/services?page=1&pageSize=10">ğŸ›  Quáº£n lÃ½ dá»‹ch vá»¥</a></li>
            <li><a href="/admin/user?page=1&pageSize=10">ğŸ‘¥ Quáº£n lÃ½ ngÆ°á»i dÃ¹ng</a></li>
            <li><a href="/admin/categories?page=1&pageSize=10">ğŸ“‚ Quáº£n lÃ½ danh má»¥c</a></li>
            <li><a href="/admin/employees?page=1&pageSize=10">ğŸ‘¨â€ğŸ”§ Quáº£n lÃ½ nhÃ¢n viÃªn</a></li>
            <li><a href="/admin/coupons?page=1&pageSize=10">ğŸ· Quáº£n lÃ½ mÃ£ khuyáº¿n mÃ£i</a></li>
            <li><a href="/admin/bills?page=1&pageSize=10">ğŸ’µ Quáº£n lÃ½ hÃ³a Ä‘Æ¡n</a></li>
            <li><a href="/admin/feedback?page=1&pageSize=10">â­ Quáº£n lÃ½ Ä‘Ã¡nh giÃ¡</a></li>
            <li>
                <form action="/logout" method="POST" style="margin: 0;">
                <button type="submit" class="logout-btn">
                    <i class="fas fa-sign-out-alt"></i> ÄÄƒng xuáº¥t
                </button>
                </form>
            </li>
        </ul>
    </div>

  <div class="container">
    <div class="header">
      <h1 class="page-title">Quáº£n lÃ½ Ä‘Ã¡nh giÃ¡</h1>
      <form method="get" style="display:inline;" id="pageSizeForm">
        <input type="hidden" name="page" value="<%= page %>">
        <input type="hidden" name="token" value="<%= token %>">
        <label for="pageSize">Sá»‘ dÃ²ng/trang:</label>
        <input type="number" name="pageSize" id="pageSize" min="1" max="100" value="<%= pageSize %>" style="width:60px;">
      </form>
    </div>
    
    <div id="feedbackList" class="feedback-list">
      <% if (feedback.length === 0) { %>
        <div class="no-feedback">ChÆ°a cÃ³ Ä‘Ã¡nh giÃ¡ nÃ o</div>
      <% } else { %>
        <% feedback.forEach(function(feedback) { %>
          <div class="feedback-card">
            <div class="feedback-header">
              <div class="user-info">
                <img src="<%= feedback.avatar_url || '/images/user/default-avatar.png' %>" alt="Avatar" class="user-avatar">
                <div>
                  <div class="user-name"><%= feedback.user_name %></div>
                  <div class="feedback-date"><%= new Date(feedback.created_at).toLocaleString() %></div>
                </div>
              </div>
              <div class="rating">
                <% for (let i = 1; i <= 5; i++) { %>
                  <i class="fas fa-star <%= i <= feedback.rating ? 'text-warning' : '' %>"></i>
                <% } %>
              </div>
            </div>
            <div class="feedback-content">
              <%= feedback.comment %>
            </div>
            <div class="admin-reply-section">
              <% if (feedback.admin_reply) { %>
                <div class="existing-reply">
                  <p><span class="admin-name">Admin:</span> <%= feedback.admin_reply %></p>
                </div>
              <% } else { %>
                <div class="admin-reply-form">
                  <textarea class="reply-input" id="reply-<%= feedback.id %>" placeholder="Nháº­p pháº£n há»“i cá»§a báº¡n..."></textarea>
                  <button class="reply-button" type="button" onclick="submitReply('<%= feedback.id %>')">Gá»­i pháº£n há»“i</button>
                </div>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>

    <div class="pagination">
      <% if (page > 1) { %>
        <a href="?page=<%= page - 1 %>&pageSize=<%= pageSize %>&token=<%= token %>">Trang trÆ°á»›c</a>
      <% } %>
      <span>Trang <%= page %> / <%= totalPages %></span>
      <% if (page < totalPages) { %>
        <a href="?page=<%= page + 1 %>&pageSize=<%= pageSize %>&token=<%= token %>">Trang sau</a>
      <% } %>
    </div>
  </div>

  <script>
    // HÃ m láº¥y token tá»« cookies
    function getCookie(name) {
      const value = `; ${document.cookie}`;
      const parts = value.split(`; ${name}=`);
      if (parts.length === 2) return parts.pop().split(';').shift();
    }

    let token = getCookie('token') || '';
    if (!token) {
      alert('Báº¡n cáº§n Ä‘Äƒng nháº­p vá»›i tÃ i khoáº£n admin!');
      window.location.href = '/admin/login';
    }

    // HÃ m táº¡o sao Ä‘Ã¡nh giÃ¡
    function createStars(rating) {
      let stars = '';
      for (let i = 1; i <= 5; i++) {
        stars += `<i class="fas fa-star ${i <= rating ? 'text-warning' : ''}"></i>`;
      }
      return stars;
    }

    // HÃ m táº¡o form pháº£n há»“i
    function createReplyForm(feedbackId) {
      return `
        <div class="admin-reply-form">
          <textarea class="reply-input" placeholder="Nháº­p pháº£n há»“i cá»§a báº¡n..."></textarea>
          <button class="reply-button" onclick="submitReply(${feedbackId})">Gá»­i pháº£n há»“i</button>
        </div>
      `;
    }

    // HÃ m hiá»ƒn thá»‹ pháº£n há»“i hiá»‡n táº¡i
    function showExistingReply(reply) {
      return `
        <div class="existing-reply">
          <p><span class="admin-name">Admin:</span> ${reply}</p>
        </div>
      `;
    }

    // HÃ m táº¡o card feedback
    function createFeedbackCard(feedback) {
      return `
        <div class="feedback-card">
          <div class="feedback-header">
            <div class="user-info">
              <img src="${feedback.user.avatar_url || '/images/user/default-avatar.png'}" 
                   alt="Avatar" class="user-avatar">
              <div>
                <div class="user-name">${feedback.user.name}</div>
                <div class="feedback-date">${new Date(feedback.created_at).toLocaleString()}</div>
              </div>
            </div>
            <div class="rating">
              ${createStars(feedback.rating)}
            </div>
          </div>
          <div class="feedback-content">
            ${feedback.comment}
          </div>
          <div class="admin-reply-section">
            ${feedback.admin_reply ? 
              showExistingReply(feedback.admin_reply) : 
              createReplyForm(feedback.id)}
          </div>
        </div>
      `;
    }

    // HÃ m load danh sÃ¡ch feedback
    async function loadFeedbacks() {
      try {
        const response = await fetch('/admin/feedback', {
          headers: {
            'Authorization': `Bearer ${token}`
          }
        });
        const data = await response.json();
        
        const feedbackList = document.getElementById('feedbackList');
        if (data.feedbacks.length === 0) {
          feedbackList.innerHTML = '<div class="no-feedback">ChÆ°a cÃ³ Ä‘Ã¡nh giÃ¡ nÃ o</div>';
          return;
        }

        feedbackList.innerHTML = data.feedbacks.map(feedback => createFeedbackCard(feedback)).join('');
      } catch (error) {
        console.error('Error loading feedbacks:', error);
      }
    }

    // HÃ m gá»­i pháº£n há»“i
    async function submitReply(feedbackId) {
      const replyInput = document.getElementById('reply-' + feedbackId);
      const reply = replyInput.value.trim();

      if (!reply) {
        alert('Vui lÃ²ng nháº­p pháº£n há»“i!');
        return;
      }

      try {
        const response = await fetch(`/admin/feedback/${feedbackId}/reply`, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ admin_reply: reply })
        });

        const result = await response.json();
        if (response.ok) {
          alert('Pháº£n há»“i Ä‘Ã£ Ä‘Æ°á»£c gá»­i thÃ nh cÃ´ng!');
          window.location.reload();
        } else {
          alert(result.error || 'CÃ³ lá»—i xáº£y ra khi gá»­i pháº£n há»“i');
        }
      } catch (error) {
        alert('CÃ³ lá»—i xáº£y ra khi gá»­i pháº£n há»“i');
      }
    }

    // Tá»± Ä‘á»™ng submit khi thay Ä‘á»•i giÃ¡ trá»‹
    document.getElementById('pageSize').addEventListener('change', function() {
      document.getElementById('pageSizeForm').submit();
    });
    // Hoáº·c submit khi nháº¥n Enter
    document.getElementById('pageSize').addEventListener('keydown', function(e) {
      if (e.key === 'Enter') document.getElementById('pageSizeForm').submit();
    });

    (function() {
      function getToken() {
        const params = new URLSearchParams(window.location.search);
        return params.get('token') || getCookie('token');
      }
      let token = getToken();
      if (!token) {
        alert('Báº¡n chÆ°a Ä‘Äƒng nháº­p hoáº·c phiÃªn Ä‘Äƒng nháº­p Ä‘Ã£ háº¿t háº¡n!');
        window.location.href = '/login';
        return;
      }
      // Sá»­a táº¥t cáº£ cÃ¡c link trong sidebar Ä‘á»ƒ giá»¯ token
      document.querySelectorAll('.sidebar a').forEach(link => {
        if (link.href && link.href.startsWith(window.location.origin + '/admin/')) {
          const url = new URL(link.href);
          url.searchParams.set('token', token);
          link.href = url.pathname + url.search;
        }
      });
      // Sá»­a táº¥t cáº£ cÃ¡c link phÃ¢n trang Ä‘á»ƒ giá»¯ token
      document.querySelectorAll('.pagination a').forEach(link => {
        const url = new URL(link.href, window.location.origin);
        url.searchParams.set('token', token);
        link.href = url.pathname + url.search;
      });
    })();

    // Load danh sÃ¡ch feedback khi trang Ä‘Æ°á»£c táº£i
    window.onload = loadFeedbacks;
  </script>
</body>
</html>
