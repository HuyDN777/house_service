        console.error('Error:', error);
        alert('CÃ³ lá»—i xáº£y ra!');
      }
    });

    // Xá»­ lÃ½ xÃ³a danh má»¥c
    async function deleteCategory(categoryId) {
      if (confirm('Báº¡n cÃ³ cháº¯c cháº¯n muá»‘n xÃ³a danh má»¥c nÃ y?')) {
        try {
          const response = await fetch(`/admin/categories/${categoryId}`, {
            method: 'DELETE'
          });

          if (response.ok) {
            alert('XÃ³a danh má»¥c thÃ nh cÃ´ng!');
            window.location.href = window.location.pathname + window.location.search;
          } else {
            const data = await response.json();
            alert(data.error || 'CÃ³ lá»—i xáº£y ra khi xÃ³a danh má»¥c!');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('CÃ³ lá»—i xáº£y ra!');
        }
      }
    }

    // Tá»± Ä‘á»™ng submit khi thay Ä‘á»•i giÃ¡ trá»‹
    document.getElementById('pageSize').addEventListener('change', function() {
