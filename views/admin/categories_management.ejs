          }
        } catch (error) {
          console.error('Error:', error);
          alert('C√≥ l·ªói x·∫£y ra!');
        }
      }
    }

    // T·ª± ƒë·ªông submit khi thay ƒë·ªïi gi√° tr·ªã
    document.getElementById('pageSize').addEventListener('change', function() {
