    });
    // Hoáº·c submit khi nháº¥n Enter
    document.getElementById('pageSize').addEventListener('keydown', function(e) {
      if (e.key === 'Enter') document.getElementById('pageSizeForm').submit();
    });

    (function() {
      function getToken() {
        const params = new URLSearchParams(window.location.search);
        return params.get('token');
      }
      let token = getToken();
      if (!token) {
        token = localStorage.getItem('token');
        if (token) {
          const params = new URLSearchParams(window.location.search);
          params.set('token', token);
          window.location.search = params.toString();
          return;
        } else {
          alert('Báº¡n chÆ°a Ä‘Äƒng nháº­p hoáº·c phiÃªn Ä‘Äƒng nháº­p Ä‘Ã£ háº¿t háº¡n!');
